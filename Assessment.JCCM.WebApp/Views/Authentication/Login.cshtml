@model Assessment.JCCM.DataTypes.Request.UserAuthenticationRequestDto

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="card mt-5" style="width:40%; margin:auto;">
    <div class="card-body">
        <form class="mt-2" action="/" method="post">
            <i class="text-primary fa-solid fa-user-lock" style="font-size:60px;"></i>
            <h1 class="h3 mb-5 mt-3 fw-normal">Iniciar Sesion</h1>

            <div class="form-floating mt-3">
                @*<input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">*@
                @Html.TextBoxFor(model => model.UserName, new { @required = true, @id = "floatingInput", @class = "form-control", @placeholder = "Nombre de Usuario" })
                <label for="floatingInput">Nombre de Usuario</label>
            </div>
            <div class="form-floating mt-3">
                @*<input type="password" class="form-control" id="floatingPassword" placeholder="Password">*@
                @Html.PasswordFor(model => model.Password, new { @required = true,@id = "floatingPassword", @class = "form-control", @placeholder = "Contraseña"})
                <label for="floatingPassword">Contraseña</label>
            </div>

            <div class="text-danger mt-1">
                <h5>@ViewBag.ErrorMessage</h5>
            </div>

            <button class="w-100 mt-5 btn btn-lg btn-primary" type="submit">Sign in</button>

        </form>
    </div>
</div>
